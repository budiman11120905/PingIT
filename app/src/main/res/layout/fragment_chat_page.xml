<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:id="@+id/fragment_chat_page"
    tools:context=".chat.StartChatFragment">

    <!-- TODO: Update blank fragment layout -->

    <Button
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:text="LAUNCH CHAT"
        android:id="@+id/launchChatButt"
        android:layout_gravity="center_horizontal"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tap to connect with a helpdesk specialist."
        android:textAlignment="center"
        android:id="@+id/textView"
        android:layout_above="@+id/launchChatButt" />
</RelativeLayout>
